%h2= t('devise.registrations.edit.title')
.row
  .columns.small-12.large-2
    %ul.collaide-side-nav
      = build_active_menu :general, link_to(t('devise.registrations.edit.general_change'), edit_user_registration_path(view: :general)), params[:view]
      = build_active_menu :password, link_to(t('devise.registrations.edit.change_password'), edit_user_registration_path(view: :password)), params[:view]
  .columns.small-12.large-10
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, multipart: true }) do |f|
      = f.error_notification
      .form-inputs
        .row
          -if params[:view] == 'password'
            .columns.small-12
              = f.input :password, :autocomplete => "off", :required => false
              = f.input :password_confirmation, :required => false
          -else
            .columns.large-6
              = f.input :email, :required => true, :autofocus => true
              = f.input :name
            .columns.large-6
              = image_tag resource.avatar.mini
              = f.input :avatar_cache, as: :hidden
              = f.input :avatar
            .columns.small-12
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %p= t("devise.registrations.edit.waiting_confirmation", resource: resource.unconfirmed_email)
      .form-actions
        = f.button :submit, t("devise.registrations.edit.update")
    %h5= t "devise.registrations.edit.cancel_my_account"
    %p
      = t "devise.registrations.edit.unhappy"