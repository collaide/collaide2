=render(layout: 'group/layouts/layout') do
  %h4.subheader= t('groups.topics.index.description')
  -#%blockquote= t('groups.topics.index.description')
  =render 'group/topics/form'
  .row
    .columns.small-24
      %h4.subheader= t('groups.topics.index.last_discussions')
      -if @topics.empty?
        %p= t('groups.topics.index.empty')
      -else
        %table#infinite-scroll
          %thead
            %tr
              %th= t('groups.topics.index.table.subject')
              %th= t('groups.topics.index.table.messages')
              %th= t('groups.topics.index.table.views')
              %th= t('groups.topics.index.table.users')
              %th= t('groups.topics.index.table.activity')
          %tbody.page
            -@topics.each do |t|
              %tr.item
                %td.td-subheader
                  = link_to(t.title.blank? ? strip_tags(t.message).truncate(100, seprator: ' ') : t.title, group_group_topic_path(group_group_id: @group, id: t))
                  - if t.created_at + 15.minutes >= Time.now
                    %span.label.success= t('groups.topics.index.table.new')
                %td= t.comments.size + 1
                %td= t.views
                %td
                  - t.contributors.each do |user|
                    = image_tag user.avatar.mini, class: 'th', height: 25, width: '25'
                %td= time_ago_in_words t.updated_at
        = paginate @topics
