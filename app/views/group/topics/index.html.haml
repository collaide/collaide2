=render(layout: 'group/layouts/layout') do
  %h2.subheader= t('groups.topics.index.h1_title')
  %blockquote= t('groups.topics.index.description')
  =render 'group/topics/form'
  .row
    .columns.small-24
      %h4.subheader= t('groups.topics.index.last_discussions')
      =render(partial: 'topic', collection: @topics, as: 'topic', locals: {limit: 3}) || t('groups.topics.index.empty')
      =paginate @topics