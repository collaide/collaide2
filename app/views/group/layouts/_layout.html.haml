%h1
  = t('groups.groups.layout.title', group: @group)
  %span.statistics
    = link_to @group.members.size.to_s.html_safe + ' ' + foundation_icons('fi-torsos-male-female large'), group_group_topics_path(group_group_id: @group)
    = '/'
    = link_to @group.topics.size.to_s.html_safe + ' ' + foundation_icons('fi-comments large'), group_group_topics_path(group_group_id: @group)
    = '/'
    = link_to @group.root_repo_items.size.to_s.html_safe + ' ' + foundation_icons('fi-page-multiple large'), group_group_topics_path(group_group_id: @group)

%hr
.row
  .columns.small-3
    %ul.collaide-side-nav
      = build_active_menu path: group_group_path(@group), text: t('groups.groups.menu.welcome'), icon: 'info'
      = build_active_menu path: group_group_topics_path(group_group_id: @group), text: t('groups.groups.menu.topic'), icon: 'comments', controller: 'group/topics'
      = build_active_menu path: '', text: t('groups.groups.menu.files'), icon: 'page-multiple'
      = build_active_menu path: '', text: t('groups.groups.menu.invitations'), icon: 'info'
      = build_active_menu path: '', text: t('groups.groups.menu.admin'), icon: 'widget'
  .columns.small-9
    =yield