=render(layout: 'layout') do
  -if @groups.empty?
    %p= t('users.groups.no_group')
    -#TODO: Ajouter le lien pour cr√©er un nouveau groupe et changer en un formulaire
    =simple_form_for Group::Group.new do |f|
      .row
        =f.input :name, wrapper_html: {class: 'columns small-9'}
        =f.button :submit, t('groups.buttons.create'), wrapper_html: {class: 'columns small-3'}
  -else
    %ul.no-bullet
      -@groups.each do |group|
        %li
          %h3= link_to group, group_group_path(group)