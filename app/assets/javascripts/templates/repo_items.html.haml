.view-container
  .view-frame
    .row.sticky-element
      .columns.small-12
        .left
          %ul.breadcrumbs
            %li#home{'ng-class' => '{current: !current_item}'}
              %a{href: "{{$('base').attr('href')}}"} Home
            %li{'ng-repeat' => 'element in current_item.breadcrumb', 'ng-class' => '{current: $last}'}
              %a{href: 'repo_items/{{element.id}}'}
                {{element.name}}
        .right
          .row.collapse
            .columns.small-10
              %input{type: 'text', 'ng-model' => 'folder_name', placeholder: 'Nom du dossier', 'ng-class' => '{error: folder_error}'}
              %small.error{'ng-show' => 'folder_error'}
                {{folder_error}}
                %a{href: '#', class: 'close', 'ng-click' => 'folder_error=false'}= '&times;'.html_safe
            .columns.small-2
              %a.button.button.postfix{'ng-click' => 'createFolder(folder_name, current_item)'}
                %i.fi-plus.large
    %p{'ng-hide' => 'items.length'} Aucun fichiers ou dossiers pour le moment
    %table{'ng-show' => 'items.length'}
      %thead
        %tr
          %th
            %input{type: 'checkbox'}
          %th Nom
          %th Taille
          %th Auteur
          %th ModifiÃ©
      %tbody
        %tr.repo-items-listing{'ng-repeat' => 'item in items'}
          %td
            %input{type: 'checkbox'}
          %td{width: '500'}
            .left
              %a{href: 'repo_items/{{item.id}}'}
                <i class="{{item_symbol(item)}}"/>
                {{item.name}}
            .right
              %a{'ng-click' => 'delete(item, $index)'}
                %i.fi-x.large
          %td
            {{item.is_folder === true ? '-' : item.size}}
          %td
            <a href="{{item.sender.url}}" ng-hide="{{item.sender.you}}">{{item.sender.name}}</a>
            <span ng-show="{{item.sender.you}}">Vous</span>
          %td
            {{item.updated_at}}
    :javascript
      $('.sticky-element').stickyJQuery({topSpacing: 0})